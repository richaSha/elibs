<div class="home-back centerWrap">
<h1>Sign up</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="input-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="input-field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="input-field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Sign up", class: "btn btn-success", id: "new_user_button" %>
<% end %>
</div>
